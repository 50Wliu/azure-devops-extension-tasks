{
    "manifestVersion": 1,
    "id": "vsts-developer-tools-build-tasks",
    "version": "0.2.0",
    "publisher": "ms-devlabs",
    "name": "Extension Build Tasks",
    "description": "Build tasks to help you package, publish and install extensions and integrations to the Visual Studio Marketplace.",
    "icons": {
        "default": "tools-icon.png"
    },
    "public": false,
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "scopes": [
        "vso.code_write",
        "vso.build_execute",
        "vso.work_write",
        "vso.gallery_manage"
    ],
    "category": [
        "Build and release"
    ],
    "content": {
        "details": {
            "path": "readme.md"
        },
        "license": {
            "path": "license.txt"
        }
    },
    "links": {
        "repository": {
            "uri": "https://github.com/Microsoft/vsts-developer-tools"
        },
        "issues": {
            "uri": "https://github.com/Microsoft/vsts-developer-tools/issues"
        }
    },
    "files": [
        {
            "path": "BuildTasks"
        }
    ],
    "contributions": [
        {
            "id": "package-extension-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "BuildTasks/PackageExtension"
            }
        },
        {
            "id": "publish-extension-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "BuildTasks/PublishExtension"
            }
        },
        {
            "id": "install-extension-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "BuildTasks/InstallExtension"
            }
        },
        {
            "id": "vsts-marketplace-endpoint-type",
            "description": "VSTS Marketplace Publishing",
            "type": "ms.vss-endpoint.service-endpoint-type",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "properties": {
                "name": "VstsMarketplacePublishing",
                "displayName": "VSTS Marketplace Publishing",
                "url": "https://marketplace.visualstudio.com",
                "authenticationSchemes": [
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-basic",
                        "inputDescriptors": [
                            {
                                "id": "username",
                                "name": "Username",
                                "description": "Username",
                                "inputMode": "textbox",
                                "isConfidential": false,
                                "validation": {
                                    "isRequired": false,
                                    "dataType": "string",
                                    "maxLength": 300
                                },
                                "values": {
                                    "inputId": "username",
                                    "isDisabled": true,
                                    "defaultValue": ""
                                }
                            },
                            {
                                "id": "password",
                                "name": "Personal access token",
                                "description": "Team Services personal access token. Requires at least the Marketplace (publish) scope.",
                                "inputMode": "passwordbox",
                                "isConfidential": true,
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string",
                                    "maxLength": 300
                                }
                            }
                        ]
                    }
                ]
            }
        }
    ]
}